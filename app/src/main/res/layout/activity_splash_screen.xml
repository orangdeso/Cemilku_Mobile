<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.SplashScreen">

    <ImageView
        android:id="@+id/img_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/monitoring2"
        android:layout_marginTop="150dp"/>
    
    <ImageView
        android:id="@+id/img_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:src="@drawable/berhasil"
        android:layout_below="@+id/img_1"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Anda Berhasil Login"
        android:fontFamily="@font/poppinsextra"
        android:textSize="30sp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_below="@id/img_2"
        android:textColor="@color/ireng"/>

</RelativeLayout>